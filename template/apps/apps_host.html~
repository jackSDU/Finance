                        <td  align="center">
                            <button type="button" class="btn btn-info" onclick="modify({{ i.id }})">修改</button>
                            <a href="/apps/host/delete/{{ i.id }}" id="delete{{ i.id }}" type="button" class="btn btn-danger" onclick="return confirm('确定要删除{{ i.id }}号主机么？')">删除</a>
                        </td>
